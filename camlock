local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local CamlockState = false
local Prediction = 0.1768521

-- Radyal degrade renkler
local startColor = Color3.fromRGB(0, 0, 128) -- Başlangıç rengi (lacivert)
local endColor = Color3.fromRGB(0, 102, 204) -- Bitiş rengi (mavi)

-- Radyal degrade fonksiyonu
local function DegradeFrameColor(Frame)
    local screenSize = workspace.CurrentCamera.ViewportSize
    local center = Vector2.new(screenSize.X / 2, screenSize.Y / 2)
    local framePos = Frame.AbsolutePosition
    local frameSize = Frame.AbsoluteSize
    local frameCenter = Vector2.new(framePos.X + frameSize.X / 2, framePos.Y + frameSize.Y / 2)
    local distance = (frameCenter - center).magnitude
    local maxDistance = math.sqrt(frameSize.X^2 + frameSize.Y^2) / 2
    local ratio = distance / maxDistance
    Frame.BackgroundColor3 = Color3.Lerp(startColor, endColor, ratio)
end

local function CreateNyxalFrame()
    local Nyxal = Instance.new("ScreenGui")
    Nyxal.Name = "Nyxal"
    Nyxal.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    Nyxal.Parent = game.CoreGui
    
    local Frame = Instance.new("Frame")
    Frame.Parent = Nyxal
    Frame.BackgroundColor3 = startColor -- Radyal degrade efekti ile başlatma
    Frame.BorderColor3 = Color3.fromRGB(0, 0, 0)
    Frame.BorderSizePixel = 0
    Frame.Size = UDim2.new(0, 202, 0, 70)
    Frame.Position = UDim2.new(0.5, -101, 0.5, -35)
    Frame.AnchorPoint = Vector2.new(0.5, 0.5)
    Frame.Active = true
    Frame.Draggable = true
    
    local function UpdateFramePosition()
        Frame.Position = UDim2.new(0.5, -Frame.AbsoluteSize.X / 2, 0.5, -Frame.AbsoluteSize.Y / 2)
    end
    UpdateFramePosition()
    Frame:GetPropertyChangedSignal("AbsoluteSize"):Connect(UpdateFramePosition)
    
    local UICorner = Instance.new("UICorner")
    UICorner.Parent = Frame
    
    local TextButton = Instance.new("TextButton")
    TextButton.Parent = Frame
    TextButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    TextButton.BackgroundTransparency = 5.000
    TextButton.BorderColor3 = Color3.fromRGB(0, 0, 0)
    TextButton.BorderSizePixel = 0
    TextButton.Size = UDim2.new(0, 170, 0, 44)
    TextButton.Position = UDim2.new(0.5, -85, 0.5, -22)
    TextButton.AnchorPoint = Vector2.new(0.5, 0.5)
    TextButton.Font = Enum.Font.SourceSansSemibold
    TextButton.Text = "Nyxal CamLock"
    TextButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextButton.TextScaled = true
    TextButton.TextSize = 11.000
    TextButton.TextWrapped = true
    
    local UICorner_2 = Instance.new("UICorner")
    UICorner_2.Parent = TextButton
    
    local state = true
    TextButton.MouseButton1Click:Connect(
        function()
            state = not state
            if not state then
                TextButton.Text = "Nyxal ON"
                CamlockState = true
            else
                TextButton.Text = "Nyxal OFF"
                CamlockState = false
            end
        end
    )
    
    RunService.RenderStepped:Connect(function()
        DegradeFrameColor(Frame)
    end)
end

CreateNyxalFrame()
