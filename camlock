local validKeys = {}

-- Key oluşturma fonksiyonu
local function generateKey(length)
    local chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789'
    local key = ''
    for i = 1, length do
        local index = math.random(1, #chars)
        key = key .. chars:sub(index, index)
    end
    return key
end

-- Yeni key ekleme fonksiyonu
local function addKey(newKey)
    table.insert(validKeys, newKey)
end

-- Key doğrulama fonksiyonu
local function isValidKey(key)
    for _, v in ipairs(validKeys) do
        if v == key then
            return true
        end
    end
    return false
end

-- GUI öğeleri
local frame = script.Parent
local textBox = frame:WaitForChild("TextBox")
local validateButton = frame:WaitForChild("ValidateButton")
local copyLinkButton = frame:WaitForChild("CopyLinkButton")
local messageLabel = frame:WaitForChild("MessageLabel")
local currentKeyLabel = frame:WaitForChild("CurrentKeyLabel")

-- Başlangıçta bir key oluştur ve ekle
local currentKey = generateKey(16)
addKey(currentKey)
currentKeyLabel.Text = "Current Key: " .. currentKey

-- Belirli aralıklarla yeni bir key oluşturma
spawn(function()
    while true do
        wait(10) -- Her 10 saniyede bir
        currentKey = generateKey(16)
        addKey(currentKey)
        currentKeyLabel.Text = "Current Key: " .. currentKey
    end
end)

-- Validate button tıklama olayı
validateButton.MouseButton1Click:Connect(function()
    local inputKey = textBox.Text
    if isValidKey(inputKey) then
        messageLabel.Text = "Valid Key!"
    else
        messageLabel.Text = "Invalid Key!"
    end
end)

-- Copy link button tıklama olayı
copyLinkButton.MouseButton1Click:Connect(function()
    local keyLink = "https://example.com/getkey"
    setclipboard(keyLink)
    messageLabel.Text = "Key link copied to clipboard!"
end)
